{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "declaration": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
